# Define line endings for text files .gitattributes
*.dart text eol=lf

# Treat binary files as binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.jar binary
*.keystore binary

# Dart/Flutter specific files
pubspec.yaml text eol=lf
pubspec.lock text eol=lf
*.dart_tool/** binary
*.packages text eol=lf

# Flutter build output
build/** binary
ios/Flutter/Flutter.framework/** binary
ios/Flutter/App.framework/** binary
android/app/build/** binary

# Exclude generated files from diffs
*.g.dart linguist-generated
*.freezed.dart linguist-generated
*.mocks.dart linguist-generated
*.gr.dart linguist-generated
*.iconfig.dart linguist-generated

# Exclude IDE-specific files
.idea/** binary
*.iml binary
*.ipr binary
*.iws binary
*.vscode/** binary

# Set linguist-vendored=false for non-Dart files
*.yaml linguist-vendored=false
*.md linguist-vendored=false
*.html linguist-vendored=false
*.css linguist-vendored=false
*.js linguist-vendored=false
*.json linguist-vendored=false
*.xml linguist-vendored=false
*.sh linguist-vendored=false
*.bat linguist-vendored=false
